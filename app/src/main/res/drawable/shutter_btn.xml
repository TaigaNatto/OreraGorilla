<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <!-- サイズを指定 -->
            <size
                android:width="100dp"
                android:height="100dp" />
            <!-- 背景色 -->
            <solid android:color="@color/ic_gorilla_background" />

        </shape>
    </item>

    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="oval">
            <!-- サイズを指定 -->
            <size
                android:width="100dp"
                android:height="100dp" />
            <!-- 背景色 -->
            <solid android:color="@color/ic_gorilla_background" />
            <stroke
                android:width="6dp"
                android:color="@color/ic_gorilla_black" />
        </shape>
    </item>

</layer-list>